<Window x:Class="ScintillaScrollTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:scintillascrolltest="clr-namespace:ScintillaScrollTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <WindowsFormsHost Margin="10" Initialized="WindowsFormsHost_Initialized">
            <scintillascrolltest:STextBox x:Name="textBox" UpdateUI="textBox_UpdateUI" VScrollBar="False"/>
        </WindowsFormsHost>
    </Grid>
</Window>
